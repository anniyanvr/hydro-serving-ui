{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "hydro-serving-ui",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es5",
    "paths": {
      "@environments/*": [
        "environments/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@node_modules/*": [
        "../node_modules/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@applications/*": [
        "modules/applications/*"
      ],
      "@models/*": [
        "modules/models/*"
      ],
      "@core/*": [
        "modules/core/*"
      ],
      "@shared/*": [
        "modules/shared/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}